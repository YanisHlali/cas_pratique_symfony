{% extends 'base.html.twig' %}

{% block title %}Liste des auteurs{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Liste des auteurs</h2>
        <a href="{{ path('app_authors_create') }}" class="btn btn-primary">Créer un auteur</a>
    </div>

    {% if authors|length > 0 %}
        <div class="list-group">
            {% for author in authors %}
                <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <a href="{{ path('app_authors_show', {id: author.id}) }}">{{ author.name }}</a>
                    <div>
                        <a href="{{ path('app_authors_edit', {id: author.id}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>
                        <a href="{{ path('app_authors_delete', {id: author.id}) }}" class="btn btn-sm btn-outline-danger">Supprimer</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p>Aucun auteur n'a été trouvé.</p>
    {% endif %}
</div>
{% endblock %}
