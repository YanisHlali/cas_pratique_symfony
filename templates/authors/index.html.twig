{% extends 'base.html.twig' %}

{% block title %}Hello AuthorsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a href="{{ path('app_authors_create') }}">Cr√©er un auteur</a>

    <h2>Liste des auteurs</h2>
    <ul>
        {% for author in authors %}
            <li>
            <a href="{{ path('app_authors_show', {id: author.id}) }}">{{ author.name }}</a>
            <a href="{{ path('app_authors_edit', {id: author.id}) }}">Modifier</a>
            <a href="{{ path('app_authors_delete', {id: author.id}) }}">Supprimer</a>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
