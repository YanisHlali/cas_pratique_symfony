{% extends 'base.html.twig' %}

{% block title %}Présentation de l'Auteur{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="mb-3">Présentation de l'Auteur</h2>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{ author.name }}</h5>
            <!-- Ajoutez d'autres détails de l'auteur ici si nécessaire -->
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_authors') }}" class="btn btn-secondary">Retour à la liste des auteurs</a>
    </div>
</div>
{% endblock %}
