{{ form_start(form, {attr: {class: 'card p-3 w-75 mx-auto'}}) }}

{% for field in form %}
    <div class="mb-3">
        {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(field) }}
    </div>
{% endfor %}

<div class="text-center">
    <button type="submit" class="btn btn-primary">{{ buttonLabel|default('Save') }}</button>
</div>

{{ form_end(form) }}
