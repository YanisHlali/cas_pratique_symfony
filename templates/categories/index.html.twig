{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Liste des Catégories</h1>
        <a href="{{ path('app_categories_create') }}" class="btn btn-primary">Créer une catégorie</a>
    </div>

    {% if categories|length > 0 %}
        <div class="list-group">
            {% for category in categories %}
                <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <a href="{{ path('app_categories_show', {id: category.id}) }}">{{ category.name }}</a>
                    <div>
                        <a href="{{ path('app_categories_edit', {id: category.id}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>
                        <a href="{{ path('app_categories_delete', {id: category.id}) }}" class="btn btn-sm btn-outline-danger">Supprimer</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p>Aucune catégorie n'a été trouvée.</p>
    {% endif %}
</div>
{% endblock %}
