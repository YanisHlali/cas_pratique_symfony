{% extends 'base.html.twig' %}

{% block title %}Hello CategoriesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a href="{{ path('app_categories_create') }}">Créer une catégorie</a>
    <h1>Hello ! ✅</h1>

    <ul>
    {% for category in categories %}
        <li>
         <a href="{{ path('app_categories_show', {id: category.id}) }}">{{ category.name }}</a>
            <a href="{{ path('app_categories_edit', {id: category.id}) }}">Modifier</a>
            <a href="{{ path('app_categories_delete', {id: category.id}) }}">Supprimer</a>
        </li>
    {% endfor %}
    </ul>
</div>
{% endblock %}
